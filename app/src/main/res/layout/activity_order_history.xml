<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical"
    tools:context=".OrderHistory">

    <androidx.cardview.widget.CardView style="@style/card">

        <LinearLayout style="@style/linearlayoutvertical">

            <androidx.cardview.widget.CardView style="@style/cardView">

                <LinearLayout style="@style/linearlayoutvertical">

                    <LinearLayout style="@style/linearlayouthorizontalview">

                        <TextView
                            android:id="@+id/name"
                            style="@style/Text"
                            android:text="User Name : " />

                        <TextView
                            android:id="@+id/nameTextView"
                            style="@style/TextView" />

                    </LinearLayout>

                    <LinearLayout style="@style/linearlayouthorizontalview">

                        <TextView
                            android:id="@+id/Address"
                            style="@style/Text"
                            android:text="Address : " />

                        <TextView
                            android:id="@+id/addressTextView"
                            style="@style/TextView" />

                    </LinearLayout>

                    <LinearLayout style="@style/linearlayouthorizontalview">

                        <TextView
                            android:id="@+id/City"
                            style="@style/Text"
                            android:text="City : " />

                        <TextView
                            android:id="@+id/cityTextView"
                            style="@style/TextView" />

                    </LinearLayout>

                    <LinearLayout style="@style/linearlayouthorizontalview">

                        <TextView
                            android:id="@+id/Contact"
                            style="@style/Text"
                            android:text="Contact Number : " />

                        <TextView
                            android:id="@+id/contactTextView"
                            style="@style/TextView" />

                    </LinearLayout>

                    <LinearLayout style="@style/linearlayouthorizontalview">

                        <TextView
                            android:id="@+id/Email"
                            style="@style/Text"
                            android:text="Email : " />

                        <TextView
                            android:id="@+id/emailTextView"
                            style="@style/TextView" />

                    </LinearLayout>

                    <LinearLayout style="@style/linearlayouthorizontalview">

                        <TextView
                            android:id="@+id/category"
                            style="@style/Text"
                            android:text="Cake Category : " />

                        <TextView
                            android:id="@+id/categoryTextView"
                            style="@style/TextView" />

                    </LinearLayout>

                    <LinearLayout style="@style/linearlayouthorizontalview">

                        <TextView
                            android:id="@+id/cake"
                            style="@style/Text"
                            android:text="Cake Name : " />

                        <TextView
                            android:id="@+id/cakeTextView"
                            style="@style/TextView" />

                    </LinearLayout>

                    <LinearLayout style="@style/linearlayouthorizontalview">

                        <TextView
                            android:id="@+id/Quantity"
                            style="@style/Text"
                            android:text="Quantity : " />

                        <TextView
                            android:id="@+id/quantityTextView"
                            style="@style/TextView" />

                    </LinearLayout>

                    <LinearLayout style="@style/linearlayouthorizontalview">

                        <TextView
                            android:id="@+id/Price"
                            style="@style/Text"
                            android:text="Price : " />

                        <TextView
                            android:id="@+id/priceTextView"
                            style="@style/TextView" />

                    </LinearLayout>

                    <LinearLayout style="@style/linearlayouthorizontalview">

                        <TextView
                            android:id="@+id/amount"
                            style="@style/Text"
                            android:text="Total Amount : " />

                        <TextView
                            android:id="@+id/amountTextView"
                            style="@style/TextView" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnBill"
                style="@style/button"
                android:text="Generate Bill" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>