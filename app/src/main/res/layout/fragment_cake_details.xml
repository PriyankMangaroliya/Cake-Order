<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appcolor"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView style="@style/card">

        <LinearLayout style="@style/linearlayoutvertical">

            <EditText
                android:id="@+id/CakeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cake Name: " />

            <EditText
                android:id="@+id/CakeCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cake Category: " />

            <EditText
                android:id="@+id/CakePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cake Price: â‚¹" />

            <EditText
                android:id="@+id/CakeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cake Description: " />

            <Button
                android:id="@+id/btnUpdate"
                style="@style/button"
                android:text="Update" />

            <Button
                android:id="@+id/btnDelete"
                style="@style/button"
                android:text="Delete" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
